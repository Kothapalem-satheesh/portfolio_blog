# Copy this file to .env and fill in your real values.
# NEVER commit .env to version control.

# ─── Django core ─────────────────────────────────────
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost
DJANGO_SETTINGS_MODULE=config.settings.dev

# Optional: auto-create superuser on deploy (useful on Render free tier)
AUTO_CREATE_SUPERUSER=False
DJANGO_SUPERUSER_USERNAME=satheesh
DJANGO_SUPERUSER_EMAIL=satheeshyadav85@gmail.com
DJANGO_SUPERUSER_PASSWORD=satheesh@123
AUTO_RESET_SUPERUSER_PASSWORD=False

# ─── Database ─────────────────────────────────────────
# SQLite (local dev):
DATABASE_URL=sqlite:///db.sqlite3
# PostgreSQL (production):
# DATABASE_URL=postgres://user:password@host:5432/dbname

# ─── Cache / Celery ───────────────────────────────────
CACHE_BACKEND=locmem
REDIS_URL=redis://127.0.0.1:6379/0
CELERY_TASK_ALWAYS_EAGER=True

# ─── Email (Gmail SMTP) ───────────────────────────────
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-gmail@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=your-gmail@gmail.com
ADMIN_EMAIL=your-gmail@gmail.com

# ─── OpenAI ───────────────────────────────────────────
OPENAI_API_KEY=sk-...your-openai-api-key...
OPENAI_MODEL=gpt-4o-mini

# ─── Site ─────────────────────────────────────────────
SITE_BASE_URL=http://127.0.0.1:8000
